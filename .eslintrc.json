{
  "extends": ["airbnb-base", "plugin:jest/recommended"],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 13
  },
  "rules": {
    "no-prototype-builtins": "off",
    "operator-linebreak": ["error", "after"],
    "max-len": ["error", { "code": 80 }]
  },
  "plugins": ["jest"],
  "ignorePatterns": ["src/legend/Legend.js"]
}
